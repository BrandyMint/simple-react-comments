{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/__tests__"]
}
